	<div class="container" id="container1" style="display:none">
        <div class="row centered-form">
            <div class="">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center" style="font-weight: bold; font-size:20px;">Book you Nail Session now !</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for @booking, :url => { :action => "booking" } do |f| %>
                            <div class="form-group">
                            <%= f.text_field :name, :placeholder => 'Name', :class => 'form-control input-sm', :id => 'first_name' %>
                            </div>

                            

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                    <%= f.text_field :email, :placeholder => 'Email Address', :class => 'form-control input-sm', :id => 'email' %>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                    <%= f.text_field :phone, :placeholder => 'Phone Number', :class => 'form-control input-sm', :id => 'phone' %>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                    <p class="input-sm">Type of service wanted :</p>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                    <%= f.select :select_option, options_for_select(['Acrylic Nails', 'Manicure and Pedicure', 'Shellac Nails', 'Gel Nails']), {}, {:class => 'form-control input-sm', :id => 'phone'} %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                 <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                <%= f.date_field :date, :placeholder => 'Date', :class => 'form-control input-sm', :id => 'date' %>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <%= f.time_field :time, :placeholder => 'Select Time', :class => 'form-control input-sm', :id => 'time' %>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= f.text_field :comments, :placeholder => 'Comments', :class => 'form-control input-sm', :id => 'comments' %>
                            </div>
                            <%= submit_tag("Submit", :class => "btn btn-info btn-block") %>
                            <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>