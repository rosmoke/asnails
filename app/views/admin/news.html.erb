<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Asnails</h1>
    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard"></i> News settings</li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-lg-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Create articles</h3>
        </div>
        <div class="panel-body"><h5>Please keep in mind that preffered resolution is 800px * 360px.</h4>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Something Else</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
               
            </div>
            <div class="text-right">
                <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-long-arrow-right fa-fw"></i> Manage articles</h3>
      </div>
      <div class="panel-body"> 
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                  <tr>
                      <th>Title</th>
                      <th>Content</th>
                      <th>Image</th>
                      <th>Created on</cth>
                      <th>Votes</th>
                  </tr>
              </thead>
              <tbody>
              <% @news.each do |news|  %>
                  <tr class="gradeU">
                      <td><%= link_to news.title, edit_news_path(news) %></td>
                      <td><%= news.content[0...60] %></td>
                      <td><%= news.img_url %></td>
                      <td class="center"><%= news.created_at.strftime("%m/%d/%Y - %H:%M") %></td>
                      <td class="center"><%= button_to 'Delete', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end  %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>